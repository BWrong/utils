{
  "name": "@bwrong/auth-tool",
  "version": "2.2.0",
  "author": "bwrong<ibwrong@foxmail.com>",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "auth",
    "vue"
  ],
  "description": "vue项目资源（菜单、路由、按钮...）权限控制解决方案",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "release": "npm run build && standard-version --infile CHANGELOG.md "
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/BWrong/auth-tool.git",
  "bugs": {
    "url": "https://github.com/BWrong/auth-tool.git/issues",
    "email": "ibwrong@foxmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BWrong/auth-tool.git"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-eslint": "^9.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "rollup": "^3.2.5",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "standard-version": "^9.5.0",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "skip": {
      "commit": false
    }
  },
  "peerDependencies": {
    "vue": "^2.0.0 || ^3.0.0",
    "vue-router": "^3.0.0 || ^4.0.0"
  }
}
